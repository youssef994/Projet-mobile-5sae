<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".GestionClasse"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="46dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="46dp">

        <TextView
            android:id="@+id/gestionClasse"
            android:layout_width="192dp"
            android:layout_height="62dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="156dp"

            android:text="Gestion des classes"
            android:textColor="@color/violet"
            android:textSize="14dp"
            app:layout_constraintEnd_toStartOf="@id/gestionClasseImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/gestionClasseImage"
            android:layout_width="0dp"
            android:layout_height="157dp"
            android:layout_marginTop="116dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toEndOf="@+id/gestionClasse"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:layout_marginTop="28dp"

            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gestionClasseImage">

            <androidx.cardview.widget.CardView
                android:id="@+id/GestionClasseCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="319dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout_editor_absoluteX="20dp"
                    tools:layout_editor_absoluteY="319dp">

                    <TextView
                        android:id="@+id/addClasse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/addClasseImage"
                        android:layout_centerHorizontal="true"


                        android:text="Ajout Classe"
                        android:textColor="@color/violet"
                        android:textSize="13sp"
                        tools:layout_editor_absoluteX="72dp"
                        tools:layout_editor_absoluteY="414dp" />

                    <ImageView
                        android:id="@+id/addClasseImage"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/add_etudiant"
                        tools:layout_editor_absoluteX="73dp"
                        tools:layout_editor_absoluteY="334dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ConsulterClasseCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                tools:layout_editor_absoluteX="216dp"
                tools:layout_editor_absoluteY="319dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout_editor_absoluteX="216dp"
                    tools:layout_editor_absoluteY="319dp">

                    <TextView
                        android:id="@+id/consulterClasse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/consulterClasseImage"
                        android:layout_centerHorizontal="true"


                        android:text="Consulter liste classe "
                        android:textColor="@color/violet"
                        android:textSize="13sp"
                        tools:layout_editor_absoluteX="240dp"
                        tools:layout_editor_absoluteY="414dp" />

                    <ImageView
                        android:id="@+id/consulterClasseImage"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/consulter"
                        tools:layout_editor_absoluteX="269dp"
                        tools:layout_editor_absoluteY="334dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <ImageView
            android:id="@+id/backbutton"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="183dp"
            android:rotation="-180"
            android:src="@drawable/logout"
            app:layout_constraintBottom_toTopOf="@+id/row1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.052"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
