<!-- activity_enseignant_detail.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".clubDetails">

    <!-- Add UI elements to display enseignant details -->

    <EditText
        android:id="@+id/nomEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"

        android:textSize="18sp"
        android:inputType="text" />

    <EditText
        android:id="@+id/presidentEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nomEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"

        android:textSize="18sp"
        android:inputType="text" />

    <EditText
        android:id="@+id/vicepEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/presidentEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"

        android:textSize="18sp"
        android:inputType="text" />

    <EditText
        android:id="@+id/descriptionEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vicepEditText"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:inputType="text" />


    <Button
        android:id="@+id/buttonModifier"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descriptionEditText"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="37dp"
        android:text="Modifier" />

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonModifier"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="-50dp"
        android:text="Supprimer" />

</RelativeLayout>
